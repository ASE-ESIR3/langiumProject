{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "out/syntaxes",
        "strict": false,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "syntaxes/my-dsl.monarch.ts"
    ],
    "exclude": ["out", "node_modules"]
}
