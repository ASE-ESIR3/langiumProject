
Void main() {
    flocon(3, 100);
}

Void flocon(Number max, Number size)
{

    if((max == 0)){
    
    Forward (size/3) CM;
    Rotate 45;
    Forward (size/3) CM;
    Rotate -90;
    Forward (size/3) CM;
    Rotate 45;
    Forward (size/3) CM;
    }
    else
    {
        flocon((max - 1), (size/3));
    };
    
   
}
