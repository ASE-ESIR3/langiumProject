Void flocon(Number max, Number size)
{

    if((max == 0)){

    Forward (size/3) CM;
    Rotate 45;
    Forward (size/3) CM;
    Rotate -90;
    Forward (size/3) CM;
    Rotate 45;
    Forward (size/3) CM;
    }
    else
    {

        flocon((max - 1), (size/3));
        Rotate 45;
        flocon((max - 1), (size/3));
        Rotate -90;
        flocon((max - 1), (size/3));
        Rotate 45;
        flocon((max - 1), (size/3));

    };


}